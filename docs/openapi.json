    "components": {
      "schemas": {
        "User": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer"
            },
            "username": {
              "type": "string"
            },
            "email": {
              "type": "string",
              "format": "email"
            },
            "user_type": {
              "type": "integer",
              "enum": [
                1,
                2,
                3
              ],
              "description": "1 - FREE / 2 - PREMIUM / 3 - EXPIRED"
            },
            "status": {
              "type": "integer"
            },
            "facebook_id": {
              "type": "string"
            },
            "line_id": {
              "type": "string"
            },
            "device_id": {
              "type": "integer"
            },
            "device_type": {
              "type": "string",
              "enum": [
                "ios",
                "android",
                "unknown"
              ]
            },
            "created_at": {
              "type": "string",
              "format": "datetime"
            },
            "updated_at": {
              "type": "string",
              "format": "datetime"
            }
          },
          "example": {
            "id": 1,
            "username": "Deadpool",
            "email": "deadpool@gmail.com",
            "user_type": 1,
            "status": 1,
            "facebook_id": "845741028203618",
            "line_id": "LINE12345798",
            "created_at": "2018-08-03T10:42:30.910507Z",
            "updated_at": "2018-08-09T07:20:12.792289Z"
          }
        },
        "Token": {
          "type": "object",
