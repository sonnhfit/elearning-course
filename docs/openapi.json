            "description": "Optional description in *Markdown*",
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string",
                      "format": "email"
                    },
                    "password": {
                      "type": "string",
                      "format": "password"
                    },
                    "device_id": {
                      "type": "string"
                    },
                    "device_type": {
                      "type": "string",
                      "enum": [
                        "ios",
                        "android"
                      ]
                    }
                  },
                  "required": [
                    "email",
                    "password",
                    "device_id",
                    "device_type"
                  ],
                  "example": {
                    "email": "deadpool@gmail.com",
                    "password": "bottomsecret",
                    "device_id": "IOS-123-456",
                    "device_type": "ios"
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "$ref": "#/components/responses/AccessTokenResponse"
            },
            "400": {
              "$ref": "#/components/responses/400BadRequestResponse"
            },
